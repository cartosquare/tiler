					"label_text_size": 10,
					"label_text_outline_color": [
						255,
						255,
						255
					],
					"label_text_color": "@text-area"
				},
				{
					"res_max": "@z17",
					"res_min": "@z19",
					"label_field": "name",
					"filter": "[way_area] < 20000",
					"label_text_font": "@text-area",
					"label_text_size": 10,
					"label_text_outline_color": [
						255,
						255,
						255
					],
					"label_text_color": "@text-area"
				}
			]
		}
	}
}