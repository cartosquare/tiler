{
	"layers": {
		"text": {
			"data_source": "osm",
			"data_name": "text",
			"encode": "utf-8",
			"geometry_column": "way",
			"fields": "*",
			"style_files": [
				"text_style.json"
			]
		},
		"text-poly": {
			"data_source": "osm",
			"data_name": "text_poly",
			"encode": "utf-8",
			"geometry_column": "way",
			"fields": "*",
			"clip": false,
			"style_files": [
				"text_style.json"
			]
		},
		"area-text": {
			"data_source": "osm",
			"data_name": "area_text",
			"encode": "utf-8",
			"geometry_column": "way",
			"fields": "*",
			"clip": false,
			"rules": [
				{
					"res_max": "@z14",
					"res_min": "@z19",
					"label_field": "name",
					"filter": "[way_area] >= 150000",
					"label_text_font": "@text-area",
					"label_text_size": 10,
					"label_text_outline_color": [
						255,
						255,
						255
					],
					"label_text_color": "@text-area"
				},
				{
					"res_max": "@z15",
					"res_min": "@z19",
					"label_field": "name",
					"filter": "[way_area] >= 80000 and [way_area] < 150000",
					"label_text_font": "@text-area",
					"label_text_size": 10,
					"label_text_outline_color": [
						255,
						255,
						255
					],
					"label_text_color": "@text-area"
				},
				{
					"res_max": "@z16",
					"res_min": "@z19",
					"label_field": "name",
					"filter": "[way_area] >= 20000 and [way_area] < 80000",
